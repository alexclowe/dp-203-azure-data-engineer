name: Issue Comment Handler (clear overdue on CD comment)
on:
  issue_comment:
    types: [created]

permissions:
  issues: write
  contents: read

jobs:
  clear-overdue:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install deps
        run: |
          python -m pip install --upgrade pip
          pip install pyyaml requests

      - name: Handle comment
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          REPO: ${{ github.repository }}
          ISSUE_NUMBER: ${{ github.event.issue.number }}
          COMMENTER: ${{ github.event.comment.user.login }}
        run: |
          python .github/scripts/issue_comment_handler.py \
            --repo "$REPO" \
            --issue "$ISSUE_NUMBER" \
            --commenter "$COMMENTER" \
            --config ".github/agent.yml"
